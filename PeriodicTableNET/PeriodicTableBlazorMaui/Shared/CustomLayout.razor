@inherits LayoutComponentBase
<MudThemeProvider />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
    <MudAppBar Color="Color.Dark" Elevation="3">
        Periodic Table Of Elements
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.End" OnClick="@((e) => DrawerToggle())" />
    </MudAppBar>
    <MudDrawer @bind-Open="@_drawerOpen" Anchor="Anchor.End" Color="Color.Dark" ClipMode="DrawerClipMode.Always" Elevation="3">
        <MudDrawerHeader>
            <MudText Typo="Typo.h5">@ElementName</MudText>            
        </MudDrawerHeader>
        <MudText Typo="Typo.body1" >@ActiveElement?.Name</MudText>
        <MudText Typo="Typo.body1">@ActiveElement?.Name</MudText>
    </MudDrawer>
    <MudMainContent>
        @Body
    </MudMainContent>

</MudLayout>

@code {
    protected void SetActiveElement(PeriodicTableData.Element element)
    {
        this.ActiveElement = element;
    }
    protected PeriodicTableData.Element ActiveElement;
    private MudTheme Theme = new MudTheme();
    bool _drawerOpen = true;
    protected string ElementName => this.ActiveElement?.Name;

    void DrawerToggle()
    {
        _drawerOpen = !_drawerOpen;
    }
}
