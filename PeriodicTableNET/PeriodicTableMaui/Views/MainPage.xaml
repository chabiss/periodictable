                </ScrollView>
            </ContentView>
        </RefreshView>

            <Button
                x:Name="InitialData"
                Grid.Row="1"
                Text="Refresh"
                SemanticProperties.Hint="Initialize Data Engine"
                Command="{Binding GetTableElementsCommand}"
                HorizontalOptions="Center" />
